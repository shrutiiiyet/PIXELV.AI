# ---------- Stage 1: Build frontend ----------
FROM node:20-alpine AS build

WORKDIR /app

COPY ./frontend/package.json ./package.json
RUN npm install

COPY ./frontend ./
RUN npm run build


# ---------- Stage 2: Serve with Nginx ----------
FROM nginx:alpine

COPY --from=build /app/dist /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
